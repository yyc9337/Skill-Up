<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <conversionRule conversionWord="tid" converterClass="com.surfinn.glzza.log.ThreadIdConverter"/>

    <!-- If LOG_HOME env value is not defined then the LOG_HOME value will be retrieved from logback properties file  -->
    <if condition='isNull("LOG_HOME")'>
        <then>
            <include resource="logback-properties.xml" />
            <if condition='isNull("LOG_HOME")'>
                <then>
                	<!-- <property name="LOG_HOME" value="/tmp"/> -->
                    <property name="LOG_HOME" value="./logs"/>
                </then>
            </if>
        </then>
    </if>

    <property name="LOG_HOME_BACKUP" value="${LOG_HOME}/backup"/>
    <property name="MAX_FILE_SIZE" value="100MB"/>
    <property name="MAX_HISTORY" value="30"/>

    <property name="DETAIL_PATTERN" value="%d{yyyy-MM-dd HH:mm:ss.SSS} [%tid]-[%X{GTXID}] [%-5level] %class.%M:%L - %msg%n"/>
    <property name="DEBUG_PATTERN" value="%d{HH:mm:ss.SSS} [%tid]-[%X{GTXID}] [%-5level] %class{0}.%M:%L - %msg%n"/>
    <property name="INFO_PATTERN" value="%d{HH:mm:ss.SSS} [%X{GTXID}] [%-5level] %class{0}.%M:%L - %msg%n"/>

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern>
                ${DETAIL_PATTERN}
            </Pattern>
        </layout>
    </appender>

    <appender name="debugSYNC" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_HOME}/debug.log</file>
        <encoder>
            <pattern>${DEBUG_PATTERN}</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_HOME_BACKUP}/debug.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <maxFileSize>${MAX_FILE_SIZE}</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
            <maxHistory>${MAX_HISTORY}</maxHistory>
        </rollingPolicy>
    </appender>
    <appender name="debugFILE" class="ch.qos.logback.classic.AsyncAppender">
        <appender-ref ref="debugSYNC" />
        <includeCallerData>true</includeCallerData>
        <queueSize>2048</queueSize>
    </appender>

    <!-- Default Properties -->
    <if condition='"${spring.profiles.active}".equals("server")'>
        <then>
            <!--<include file="${CPN_HOME}/conf/logback-server.xml"/>-->
            <include resource="logback-server.xml"/>
        </then>
        <else>
            <include resource="logback-local.xml"/>
        </else>
    </if>
</configuration>
